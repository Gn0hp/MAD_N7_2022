<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp">

        <!--Top Navigator-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginTop="4dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/custom_edit_text"
                android:ems="15"
                android:text="Bạn cần tìm sản phẩm gì?"
                android:textColor="@color/text_search"
                android:textSize="16dp"
                android:layout_weight="10"
                android:inputType="text"/>


            <Button
                android:id="@+id/ic_search_nav"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/bell_24"
                android:layout_gravity="right"
                app:iconSize="25dp"
                android:layout_weight="1"
                app:iconTint="@color/btn_nav"
                tools:ignore="SpeakableTextPresentCheck" />
            <Button
                android:id="@+id/ic_cart_nav"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:icon="@drawable/shopping_cart"
                android:layout_gravity="right"
                app:iconSize="25dp"
                app:iconTint="@color/btn_nav"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-black"
            android:text="Danh sách sản phẩm"
            android:textColor="@color/black"
            android:textSize="20sp" />

<!--        List Product-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>


        </LinearLayout>


    </LinearLayout>

<!--    Bottom Navigator-->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navigation"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>